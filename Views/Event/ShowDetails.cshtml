@model mvc.Models.Event

@{
    ViewData["Title"] = "Détail de l'événement";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card shadow-sm">
                <div class="card-body">
                    <h2 class="card-title text-primary fw-bold text-center">@Model.Title</h2>
                    <hr />
                    <p><strong>Description :</strong> @Model.Description</p>
                    <p><strong>Date :</strong> @Model.EventDate.ToString("dd/MM/yyyy")</p>
                    <p><strong>Lieu :</strong> @Model.Location</p>
                    <p><strong>Nombre de participants max :</strong> @Model.MaxParticipants</p>
                </div>
            </div>

            <div class="card mt-4 shadow-sm">
                <div class="card-body">
                    <h3 class="card-title text-success fw-bold text-center">Étudiants inscrits</h3>
                    <hr />
                    @if (ViewBag.Students != null && ((List<mvc.Models.Student>)ViewBag.Students).Any())
                    {
                        <ul class="list-group">
                            @foreach (var student in (List<mvc.Models.Student>)ViewBag.Students)
                            {
                                <li class="list-group-item d-flex justify-content-between align-items-center">
                                    <div>
                                        <strong>@student.Firstname @student.Lastname</strong><br />
                                        <span class="text-muted">@student.Email</span>
                                    </div>
                                </li>
                            }
                        </ul>
                    }
                    else
                    {
                        <p class="text-muted text-center">Aucun étudiant inscrit à cet événement.</p>
                    }
                </div>
            </div>
        </div>
    </div>
</div>
